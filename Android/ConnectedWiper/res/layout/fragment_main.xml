<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ford.svl.connectedwiper.MainActivity$PlaceholderFragment" >

      <Button
          android:id="@+id/disconnect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/connect"
          android:text="Disconnect Bluetooth" />

      <TextView
          android:id="@+id/btStatus"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/connect"
          android:layout_marginTop="98dp"
          android:text="Bluetooth Status: "
          android:textSize="20sp" />

      <Button
          android:id="@+id/connect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/disconnect"
          android:layout_below="@+id/btStatus"
          android:layout_marginTop="13dp"
          android:text="Connect Bluetooth" />

      <TextView
          android:id="@+id/wiper"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/btStatus"
          android:layout_alignLeft="@+id/btStatus"
          android:layout_marginBottom="31dp"
          android:text="OpenXC Wiper Status:"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/status"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/disconnect"
          android:layout_below="@+id/disconnect"
          android:layout_centerVertical="true"
          android:layout_marginTop="102dp"
          android:text="Wiper Status: "
          android:textSize="50sp" />

      <Switch
          android:id="@+id/bluetooth"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/disconnect"
          android:layout_below="@+id/disconnect"
          android:layout_marginTop="20dp"
          android:text="Bluetooth" />
    
</RelativeLayout>
